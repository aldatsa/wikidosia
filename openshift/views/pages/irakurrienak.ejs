<!doctype html>
<html lang="eu">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Wikidosia - Eguneko rankina</title>
        <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css">
        <link type="text/css" rel="stylesheet" href="/css/bootstrap-datepicker3.min.css">
        <link type="text/css" rel="stylesheet" href="/css/itxura.css">
    </head>
    <body>
        <section class='container'>
            <hgroup>
                <h1>Artikulu irakurrienak: <%= urtea + "-" + hilabetea + "-" + eguna %></h1>
            </hgroup>
            <div class="row">
                <form method="get" class="form-inline">
                    <div class="form-group">
                        <label for="date" class="control-label">Data</label>
                        <div class="date">
                            <div class="input-group input-append date" id="data">
                                <input type="text" class="form-control" value="<%= urtea + "-" + hilabetea + "-" + eguna %>">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-th"></i>
                                </span>
                            </div>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Bereziak barne
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Izenburua</th>
                            <th class="ikustaldiak">Ikustaldiak</th>
                        </tr>
                    </thead>
                    <% for (var i = 0; i < artikuluak.length; i++) { %>
                        <tr>
                            <td><%= i + 1 %>
                            <td><a href="https://eu.wikipedia.org/wiki/<%= artikuluak[i].article %>"><%= artikuluak[i].article.replace(/_/g, " ") %></a></td>
                            <td class="ikustaldiak"><%= artikuluak[i].views %></td>
                        </tr>
                    <% } %>
                </table>
            </div>

            <footer>
                <div class="logo"><a href="https://www.openshift.com/"></a></div>
            </footer>
        </section>
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/bootstrap-datepicker.min.js"></script>
        <script type="text/javascript" src="/js/bootstrap-datepicker.eu.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('#data').datepicker({
                    format: "yyyy-mm-dd",
                    weekStart: 1,
                    language: "eu",
                    autoclose: true
                });
            });
        </script>
    </body>
</html>
